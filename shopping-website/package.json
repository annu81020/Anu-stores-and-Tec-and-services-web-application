{
  "name": "shopping-website",
  "version": "1.0.0",
  "description": "Full-stack e-commerce shopping website with admin panel, PayPal integration, and Google Maps",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/server.js",
    "client": "npm start --prefix client",
    "build": "npm run build --prefix client",
    "install-all": "npm install && cd client && npm install",
    "seed": "node server/seed.js"
  },
  "keywords": ["ecommerce", "shopping", "react", "nodejs", "mongodb"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "axios": "^1.6.0",
    "@sendgrid/mail": "^8.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}
